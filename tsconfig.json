{
  "compilerOptions": {
    "moduleResolution": "node",
    "rootDir": ".",
    "baseUrl": ".",
    "strict": false,
    "module": "es6",
    "target": "es6",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitThis": true,
    "declaration": true,
    "declarationDir": "./types",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "skipLibCheck": true,
    "paths": {
      "@oraichain/*": [
        "packages/*/src"
      ]
    }
  }
}
